@inject NavigationManager NavigationManager

<div class="top-navbar">
    <div class="logo-container">
        <span class="logo-text">TransactionTracker</span>
    </div>
    <nav class="nav-menu">
        <div class="nav-item">
            <NavLink class="nav-link" href="dashboard">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="nav-link" href="transactionform">
                <i class="bi bi-list-ul"></i>
                <span>TransactionForm</span>
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="nav-link" href="transactionlist">
                <i class="bi bi-list-ul"></i>
                <span>TransactionLists</span>
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="nav-link" href="mydebt">
                <i class="bi bi-cash-stack"></i>
